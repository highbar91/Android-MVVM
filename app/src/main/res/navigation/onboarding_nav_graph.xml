<?xml version="1.0" encoding="utf-8"?>
<navigation
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/onbaording_nav_graph"
        app:startDestination="@id/homeFragment">

    <fragment
            android:id="@+id/homeFragment"
            android:name="com.bluelampcreative.androidmvvm.features.onboarding.fragments.HomeFragment"
            android:label="HomeFragment"
            tools:layout="@layout/fragment_home">
        <action
                android:id="@+id/action_homeFragment_to_secondFragment"
                app:destination="@id/secondFragment"/>
    </fragment>
    <fragment
            android:id="@+id/secondFragment"
            android:name="com.bluelampcreative.androidmvvm.features.onboarding.fragments.SecondFragment"
            android:label="SecondFragment"
            tools:layout="@layout/fragment_second">
        <action
                android:id="@+id/action_secondFragment_to_thirdFragment"
                app:destination="@id/thirdFragment"/>
    </fragment>
    <fragment
            android:id="@+id/thirdFragment"
            android:name="com.bluelampcreative.androidmvvm.features.onboarding.fragments.ThirdFragment"
            android:label="ThirdFragment"
            tools:layout="@layout/fragment_third"/>
</navigation>